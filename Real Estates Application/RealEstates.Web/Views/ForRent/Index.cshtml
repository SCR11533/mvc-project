@model RealEstates.Web.ViewModels.ForRent.ForRentViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>ForRent</h2>

@Html.Partial("_SearchForm")

<div class="container" id="results">
    @Html.Partial("_RealEstatesForRentTemplate", Model)
</div>

<nav>
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="/ForRent/Index/@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = 1; i < Model.TotalPages; i++)
        {
            var className = string.Empty;
            if (Model.CurrentPage == i)
            {
                className = "active";
            }
            <li class="@className"><a href="/ForRent/Index/@i">@i</a></li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="/ForRent/Index/@(Model.CurrentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>
