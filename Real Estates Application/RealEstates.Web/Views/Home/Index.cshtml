@model RealEstates.Web.ViewModels.Home.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <h4>Most Popular Cities</h4>
    @foreach (var city in Model.Cities)
    {
        <div class="col-md-3">
            @Html.ActionLink(city.Name, "RealEstatesByCity", new { name = city.Name })
        </div>
    }
</div>

<div class="row">
    <div class="col-md-10">
        <h4>Most recent</h4>

        @foreach (var item in Model.RealEstates)
        {
            <div class="row">
                <a href="@item.Url">
                    <div class="col-md-12">
                        <p class="bg-info">@Html.DisplayFor(modelItem => item.Title)</p>
                    </div>
                    <div class="col-md-4">
                        <img src="@Url.Content(item.ImageUrl)" alt="Alternate Text" width="100%" />
                    </div>
                </a>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            @Html.DisplayFor(modelItem => item.Description)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            Construction Year: @Html.DisplayFor(modelItem => item.ConstructionYear)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            Days on market:
                            @Html.DisplayFor(modelItem => (DateTime.Now - item.CreatedOn.Date).Days)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            Type: @Html.DisplayFor(modelItem => item.Type)
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            Sqft:
                            @Html.DisplayFor(modelItem => item.SquareMeter)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            Sell Price:
                            <strong>@Html.DisplayFor(modelItem => item.SellingPrice)</strong>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href='@Url.Action("Index","UserProfile", new { id = item.Contact })'>
                            Real Eastate Agent
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

    <div class="col-md-2 ">
        <h4>Brokers:</h4>
        @foreach (var user in Model.Users)
        {
            <div class="row">
                <a href='@Url.Action("Index","UserProfile", new { id = user.Id })'>
                    @user.Name
                    <img src="@user.ImageUrl" alt="Alternate Text" width="100%" />
                </a>
            </div>
        }
    </div>
</div>